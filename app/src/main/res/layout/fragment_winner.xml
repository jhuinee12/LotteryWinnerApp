<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".presentation.recommended.RecommendedFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/BackGround">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/spinnerLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:id="@+id/chooseDrwNo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="회차선택"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:textSize="20dp"
                app:layout_constraintTop_toTopOf="@+id/spinner"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/spinner"
                app:layout_constraintBottom_toBottomOf="@+id/spinner"/>

            <Spinner
                android:id="@+id/spinner"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toEndOf="@+id/chooseDrwNo"
                app:layout_constraintEnd_toEndOf="parent"/>
        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/inputNumberLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/spinnerLayout">

            <EditText
                android:id="@+id/inputFirstNumber"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:hint="01"
                android:textSize="20dp"
                android:gravity="center"
                android:maxLength="2"
                android:inputType="number"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/inputSecondNumber"/>

            <EditText
                android:id="@+id/inputSecondNumber"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:hint="02"
                android:textSize="20dp"
                android:gravity="center"
                android:maxLength="2"
                android:inputType="number"
                app:layout_constraintStart_toEndOf="@+id/inputFirstNumber"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/inputThirdNumber"/>

            <EditText
                android:id="@+id/inputThirdNumber"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:hint="03"
                android:textSize="20dp"
                android:gravity="center"
                android:maxLength="2"
                android:inputType="number"
                app:layout_constraintStart_toEndOf="@+id/inputSecondNumber"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/inputFourthNumber"/>

            <EditText
                android:id="@+id/inputFourthNumber"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:hint="04"
                android:textSize="20dp"
                android:gravity="center"
                android:maxLength="2"
                android:inputType="number"
                app:layout_constraintStart_toEndOf="@+id/inputThirdNumber"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/inputFifthNumber"/>

            <EditText
                android:id="@+id/inputFifthNumber"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:hint="05"
                android:textSize="20dp"
                android:gravity="center"
                android:maxLength="2"
                android:inputType="number"
                app:layout_constraintStart_toEndOf="@+id/inputFourthNumber"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/inputSixthNumber"/>

            <EditText
                android:id="@+id/inputSixthNumber"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:hint="06"
                android:textSize="20dp"
                android:gravity="center"
                android:maxLength="2"
                android:inputType="number"
                app:layout_constraintStart_toEndOf="@+id/inputFifthNumber"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>

        </androidx.constraintlayout.widget.ConstraintLayout>
        
        <Button
            android:id="@+id/btnSearchWinner"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="당첨금 조회"
            android:textSize="20dp"
            android:textStyle="bold"
            android:padding="10dp"
            android:layout_marginTop="50dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/inputNumberLayout"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>